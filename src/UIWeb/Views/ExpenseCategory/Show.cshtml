@model Wiz.Gringotts.UIWeb.Models.ExpenseCategories.ExpenseCategoryDetails

@{
    ViewBag.Title = "Expense Category Details";
}

<div class="panel panel-default">
    <div class="panel-heading">
        <h3 class="panel-title">Expense Category Details</h3>
    </div>
    <div class="panel-body">
        <div class="row">
            <div class="col-md-12">
                <ul class="list-group">
                    <li class="list-group-item"><strong>Name:</strong> @Model.ExpenseCategory.Name</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="panel-footer">
        <div class="row">
            <div class="col-md-12">
                <div class="pull-right">
                    <a class="btn btn-default" href="@Url.Action("Edit", new {id = Model.ExpenseCategory.Id})"><span class="fa fa-pencil"></span> <u>E</u>dit</a>
                    <a class="btn btn-danger" href="@Url.Action("Toggle", new {id = Model.ExpenseCategory.Id})"><span class="fa fa-warning"></span> @(Model.ExpenseCategory.IsActive ? "Deactivate" : "Activate")</a>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/Scripts/Modules/expense.category.detail.js")
}